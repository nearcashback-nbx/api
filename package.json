{
  "name": "nearcon_hack_api",
  "version": "0.0.1",
  "description": "cashback application Nearcon22 hack",
  "main": "index.js",
  "repository": "git@github.com:Nearcon-22-Hack-NearCashback/api.git",
  "author": "Den <mirloxd3@gmail.com>",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "@google-cloud/storage": "^6.7.0",
    "@google-cloud/tasks": "^3.0.5",
    "bn.js": "^5.2.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.2",
    "express": "^4.18.1",
    "express-session": "^1.17.3",
    "express-validator": "^6.14.2",
    "jsonwebtoken": "^8.5.1",
    "multer": "^1.4.5-lts.1",
    "near-api-js": "^1.0.0",
    "passport": "^0.6.0",
    "passport-google-oauth2": "^0.2.0",
    "pg": "^8.8.0",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^10.9.1",
    "typeorm": "^0.3.10",
    "uuid": "^9.0.0"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "npx tsc",
    "start": "node dist/index.js",
    "dev": "concurrently \"npx tsc --watch\" \"nodemon -q dist/index.js\"",
    "typeorm": "typeorm-ts-node-esm -d ./db.ts",
    "typeorm:run": "yarn build && typeorm-ts-node-esm -d ./db.ts migration:run",
    "typeorm:revert": "typeorm-ts-node-esm -d ./db.ts migration:revert",
    "deploy": "gcloud beta run deploy cashback-api --source=. --platform=managed --region=europe-west3 --allow-unauthenticated --no-use-http2 --concurrency=200 --cpu=2 --memory=4Gi --min-instances=1 --max-instances=5"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.1",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.5",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.11.9",
    "@types/nodemailer": "^6.4.6",
    "@types/passport": "^1.0.11",
    "@types/passport-google-oauth2": "^0.1.5",
    "@types/uuid": "^8.3.4",
    "concurrently": "^7.4.0",
    "nodemon": "^2.0.19",
    "typescript": "^4.8.3"
  }
}